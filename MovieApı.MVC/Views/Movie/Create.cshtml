@model MovieAPI.ServiceTier.Dtos.Movie.MovieCreateDto

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Kullanıcı Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imdb">Imdb</label>
        <input asp-for="Imdb" class="form-control" />
        <span asp-validation-for="Imdb" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost">Cost</label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SceneDate">SceneDate</label>
        <input asp-for="SceneDate" class="form-control" />
        <span asp-validation-for="SceneDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-danger">Kaydet</button>
</form>